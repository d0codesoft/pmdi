-->

<h1>@ViewData["Title"]</h1>
<!-- Start Account Signup Area -->
<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <form class="card login-form inner-content" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="card-body">
                        <div class="title">
                            <h3>Let's join us</h3>
                            <p>Use the form below to create your account.</p>
                        </div>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) != 0)
                            {
                                <div class="alt-option">
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </div>
                                <div class="or"><span>or sign up with your email</span></div>
                            }
                            else
                            {
                                <div class="or"><span>sign up with your email</span></div>
                            }
                        }
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-head">
                            <div class="form-group input-group">
                                <label><i class="lni lni-user"></i></label>
                                <input class="form-control" asp-for="Input.FullName" type="text" id="name" placeholder="Enter your first name"
                                       required>
                            </div>
                            <div class="form-group input-group">
                                <label><i class="lni lni-calendar"></i></label>
                                <input class="form-control" asp-for="Input.DOB" type="date" id="datebirthday" placeholder="Enter your birthday"
                                       required>
                            </div>
                            <div class="form-group input-group">
                                <label><i class="lni lni-phone"></i></label>
                                <input class="form-control" asp-for="Input.PhoneNumber" type="tel" id="phone" placeholder="Enter your phone"
                                       required>
                            </div>
                            <div class="form-group input-group">
                                <label><i class="lni lni-envelope"></i></label>
                                <input class="form-control" asp-for="Input.Email" type="email" id="reg-email"
                                       placeholder="Enter your email" required>
                            </div>
                            <div class="form-group input-group">
                                <label><i class="lni lni-lock-alt"></i></label>
                                <input class="form-control" asp-for="Input.Password" type="password" id="reg-pass"
                                       placeholder="Enter your password" required>
                            </div>
                        </div>
                        <div class="d-flex flex-wrap justify-content-between bottom-content">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input width-auto" id="exampleCheck1">
                                <label class="form-check-label">
                                    Agree to <a asp-area="" asp-page="/Privacy">
                                        privacy &
                                        conditions
                                    </a>
                                </label>
                            </div>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">Sign Up</button>
                        </div>
                        <h4 class="create-account">
                            Already have an account? <a asp-area="Identity" asp-page="/Account/Login">Sign In Now</a>
                        </h4>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Account Signup Area -->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


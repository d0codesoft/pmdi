@using Microsoft.AspNetCore.Identity
@using pmdi.Areas.Identity.Data;
@inject SignInManager<WebAppUser> SignInManager
@inject UserManager<WebAppUser> UserManager

<ul id="nav" class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-area="" asp-page="/Index">Home</a>
        </li>
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account manage</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="PatientsUser" asp-action="Index" title="Patints manage">Patients manage</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a asp-area="" asp-controller="PatientsUser" asp-action="Index" title="Patints">Patients</a>
            </li>
        }
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Logout" title="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-area="" asp-page="/Index">Home</a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login">Sign in</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>

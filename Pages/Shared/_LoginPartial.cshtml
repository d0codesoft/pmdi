@using Microsoft.AspNetCore.Identity
@using pmdi.Areas.Identity.Data;
@inject SignInManager<WebAppUser> SignInManager
@inject UserManager<WebAppUser> UserManager

<ul id="nav" class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-area="" asp-page="/Index">Home</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-area="" asp-page="/Index">Home</a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </li>
    }
</ul>
